{
  "manifest_version": 1,
  "id": "ttn-adapter-v3",
  "name": "The Things Network V3",
  "short_name": "TTN",
  "version": "1.0.0",
  "description": "Connect your lora sensors from https://thethingsnetwork.org",
  "homepage_url": "https://github.com/tim-hellhake/ttn-adapter#readme",
  "license": "MPL-2.0",
  "author": "Fabian KÃ¼ng",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "strict_min_version": "0.10.0",
      "strict_max_version": "*",
      "primary_type": "adapter"
    }
  },
  "options": {
    "schema": {
      "type": "object",
      "properties": {
        "applications": {
          "type": "array",
          "title": "A list of applications",
          "items": {
            "type": "object",
            "required": [
              "appID",
              "accessKey",
              "region"
            ],
            "properties": {
              "appID": {
                "type": "string",
                "title": "The id of your app"
              },
              "accessKey": {
                "type": "string",
                "title": "The access key for your app"
              },
              "region": {
                "type": "string",
                "title": "The region of your handler",
                "enum": [
                  "eu1",
                  "us-west",
                  "brazil",
                  "asia-se"
                ]
              }
            }
          }
        }
      }
    }
  }
}
